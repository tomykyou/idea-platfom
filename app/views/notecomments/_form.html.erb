<%= form_with model: [ @mainnote, @mainnote.notecomments.build ] do |form| %>
    <p>
      <%= form.text_field :user_id, value: current_user.id, :readonly => true%>
    </p>
    <p>
      <%= form.text_field :user_icon, value: current_user.image, :readonly => true%>
    </p>
    <p>
      <%= form.label :commenter %><br>
      <%= form.text_field :commenter,value: current_user.username, :readonly => true%>
    </p>
    
    <p>
      <%= form.label :comment %><br>
      <%= form.text_area :comment %>
    </p>
    
    <p>
      <%= form.label :future_point %><br>
      <%= form.select :future_point, [["1pt", 1], ["2pt", 2], ["3pt", 3], ["4pt", 4], ["5pt", 5],["6pt", 6],["7pt", 7],["8pt", 8],["9pt", 9],["10pt", 10]], include_blank: "選択して下さい" %>
    </p>
    
    <p>
      <%= form.label :surprisingly_point %><br>
      <%= form.select :surprisingly_point, [["1pt", 1], ["2pt", 2], ["3pt", 3], ["4pt", 4], ["5pt", 5],["6pt", 6],["7pt", 7],["8pt", 8],["9pt", 9],["10pt", 10]], include_blank: "選択して下さい" %>
    </p>
    
    <p>
      <%= form.label :realization_point%><br>
      <%= form.select :realization_point , [["1pt", 1], ["2pt", 2], ["3pt", 3], ["4pt", 4], ["5pt", 5],["6pt", 6],["7pt", 7],["8pt", 8],["9pt", 9],["10pt", 10]], include_blank: "選択して下さい" %>
    </p>
    <p>
      <%= form.submit %>
    </p>
  <% end %>
  
