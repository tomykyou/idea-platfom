 <h1>IDEA FACTORY</h1>
<nav id="menuber">
    <ul class="menu-text">
      <li><%= link_to "ログイン", new_session_path(resource_name) %><br /></li>   
      <li><%= link_to "新機登録", new_registration_path(resource_name) %><br /></li>
    </ul>
    <ul class="menu-text">
      <li><%= link_to 'HOME', root_path%></li>
      <li><%= link_to "ABOUT IDEA FACTORY", mainnnote_about_path %></li>
      <li><%= link_to "MAKE NEW IDEA", new_mainnote_path %></li>   
      <li><%= link_to "USER LIST", mainnnote_usershow_path %></li>
  </ul>
</nav>
<div class="main-margin">
  <h1>新規登録</h1>
  <div class="main_border">
    <p><strong><%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

  <div class="field">
    <p><strong><%= f.label :メールアドレス %><br/></strong></p>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
  </div>

  <div class="field">
    <p><strong><%= f.label :ユーザーネーム %><br/></strong></p>
    <%= f.text_field :username, class: "form-control" %>
  </div>

  <div class="field">
    <p><strong><%= f.label :プロフィール画像 %><br/></strong></p>
    <%= f.file_field :image %>
  </div>
  
  <div class="field">
    <p><strong><%= f.label :一言 %><br/></strong></p>
    <%= f.text_field :award %>
  </div>

  <div class="field">
    <p><strong><%= f.label :パスワード %></strong></p>
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %>文字以上)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
  </div>

  <div class="field">
    <p><strong><%= f.label :パスワード再入力 %><br/></strong></p>
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit "登録", class: "btn btn-primary btn-block" %>
  </div>
<% end %>
  </div>
</div>