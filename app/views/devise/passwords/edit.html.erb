<h1>工夫FACTORY</h1>
<nav id="menuber">
  <ul class="menu-text">
    <li><%= link_to "新機登録", new_registration_path(resource_name) %><br /></li>
    <li><%= link_to "ログイン", new_session_path(resource_name) %><br /></li>
  </ul>
  <ul class="menu-text">
    <li><%= link_to 'トップ', root_path %></li>
    <li><%= link_to "工夫FACTORYとは？", mainnnote_about_path %></li>
    <li><%= link_to "新規工夫投稿", new_mainnote_path %></li>   
    <li><%= link_to "工夫職人一覧", mainnnote_usershow_path %></li>
  </ul>
</nav>
<div class="main-margin">
  <h1>パスワード変更</h1>
  <div class="main_border">
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="field">
    <%= f.label :password, "新しいパスワードを入力してください" %><br />
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> 文字以上で入力してください)</em><br />
    <% end %>
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "パスワード再確認用" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "パスワードを変更" %>
  </div>
<% end %>
</div>
</div>