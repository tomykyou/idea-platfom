 <h1>IDEA FACTORY</h1>
<nav id="menuber">
    <ul class="menu-text">
      <li><%= link_to "新機登録", new_registration_path(resource_name) %><br/></li>
      <li><%= link_to "ログイン", new_session_path(resource_name) %><br/></li>   
    </ul>
    <ul class="menu-text">
      <li><%= link_to 'HOME', root_path%></li>
      <li><%= link_to "ABOUT IDEA FACTORY", mainnnote_about_path%></li>
      <li><%= link_to "MAKE NEW IDEA", new_mainnote_path%></li>   
      <li><%= link_to "USER LIST", mainnnote_usershow_path%></li>
  </ul>
</nav>
<div class="main-margin">
  <h1>パスワード変更フォーム</h1>
  <div class="main_border">
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="actions">
    <%= f.submit "パスワード変更メールを送付" %>
  </div>
<% end %>
  </div>
</div>