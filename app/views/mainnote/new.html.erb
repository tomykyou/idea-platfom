<h1>New</h1>

<%= form_with model: @mainnote,:url => {:action => :create}  do |form| %>
  <% @mainnote.errors.full_messages_for(:text).each do |message| %>
    <div><%= message %></div>
  <% end %>
  <div>
    <%= form.text_field :user_id, value: current_user.id, :readonly => true%>
  </div>

  <div>
    <%= form.label :text %><br>
    <%= form.text_area :text %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>

