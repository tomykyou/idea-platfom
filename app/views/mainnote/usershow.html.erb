<%= link_to "このサイトについて", mainnnote_about_path %>
<%= link_to "投稿者一覧へ", mainnnote_usershow_path %>
<%= link_to "ログアウト", destroy_user_session_path, method: :delete %>

<h1>ユーザー一覧</h1>
<!--ユーザー一覧を表示。ログインしているユーザーにはマイページのリンクを表示させる。-->
<ul>
  <% @user.each do |user| %>
    <% if user.id==current_user.id%>
      <li>
       <%= link_to current_user.username, mainnnote_mypage_path %>
      </li>
    <% else %>
      <li>
        <a href="userpg/<%= user.id %>">
          <%= user.username %>
        </a>
      </li>
    <% end %>  
  <% end %>
</ul>
